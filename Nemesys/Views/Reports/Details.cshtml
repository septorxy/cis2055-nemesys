        {
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> <p></p>
            <a asp-action="Index">Back to List</a> <p></p>
            <a asp-controller="Investigator" asp-action="Investigate" asp-route-id="@Model.Id">Investigate</a><p></p>
