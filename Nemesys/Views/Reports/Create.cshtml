@{
    ViewData["Title"] = "Create Report";
}

@model Nemesys.ViewModels.EditReportViewModel

<h2>Create Report</h2>

<form asp-action="Create" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="TypeId" class="col-md-2"></label>
        <div class="col-md-5">
            <select asp-for="TypeId"
                    asp-items="@(new SelectList(Model.TypeList,"Id","Name"))">
                <option value="">Select a Type</option>
            </select>
            <span asp-validation-for="TypeId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="HazardDate" class="col-md-2"></label>
        <div class="col-md-5">
            <input id="datefield" type="date" asp-for="HazardDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ImageToUpload" class="col-md-2"></label>
        <div class="col-md-5">
            <input type="file" asp-for="ImageToUpload" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Create Report" />
            <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}