@model Nemesys.ViewModels.EditReportViewModel

<h2>Edit Report</h2>

<form asp-action="Edit" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Id" type="hidden" class="form-control" />

    <div class="form-group">
        <label asp-for="Type" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="HazardDate" class="col-md-2"></label>
        <div class="col-md-5">
            <input type="date" asp-for="HazardDate" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <img src="@Model.PhotoUrl" class="col-md-2" />
    </div>
    <div class="form-group">
        <label asp-for="ImageToUpload" class="col-md-2"></label>
        <div class="col-md-5">
            <input type="file" asp-for="ImageToUpload" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Update Report" />
            <a asp-controller="Reports" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Back to Post</a>
        </div>
    </div>
</form>


@*Inject JQuery validation scripts in Layout*@
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}