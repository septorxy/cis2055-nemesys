@model Nemesys.ViewModels.UserListViewModel

@{
    ViewData["Title"] = "Hall Of Fame";
}

<h1>@ViewData["Title"]</h1>

<h2>The Top @Model.TotalEntries Reporters!</h2>

<div class="row">
    @foreach (var user in Model.Users)
    {
        <div class="card" style="width: 18rem;padding:20px; margin:20px;">
            <div class="card-body">
                <h3 class="card-title">@user.UserName</h3>
                <p class="small">Made @user.TotalReports reports</p>
            </div>
        </div>
    }
</div>